<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.mwj.messagecode.messagecode.MessageCodeLayout
        android:id="@+id/msgcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:longClickable="false"
        app:draw_txt_size="14sp"
        app:interval_width="3dp"
        app:item_height="50dp"
        app:item_width="20dp"
        app:pass_leng="six"
        app:text_color="@android:color/background_dark" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAddClick"
        android:text="Copy 123456" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onDeleteClick"
        android:text="Delete" />

    <com.mwj.messagecode.messagecode.MessageCodeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:longClickable="false"
        app:draw_txt_size="14sp"
        app:interval_width="3dp"
        app:item_height="50dp"
        app:item_width="20dp"
        app:pass_leng="four"
        app:text_color="@android:color/background_dark" />

    <com.mwj.messagecode.messagecode.MessageCodeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:longClickable="false"
        app:draw_txt_size="14sp"
        app:interval_width="3dp"
        app:item_height="50dp"
        app:item_width="20dp"
        app:pass_leng="eight"
        app:text_color="@android:color/background_dark" />

</LinearLayout>